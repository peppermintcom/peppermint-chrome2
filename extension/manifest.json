
	{

		"manifest_version": 2,

		"name": "Peppermint",
		"description": "Peppermint",
		"version": "1.1",

		"icons": {
			"128": "img/logo_60x60@2x.png"
		},

		"content_scripts": [
			{
				"matches": ["https://mail.google.com/*"],
				"js": [
					"/gmail_content/js/classes/V.js",
					"/gmail_content/js/classes/Inceptor.js"
				],
				"css": [
					"/gmail_content/css/style.css"
				]
			}
		],

		"web_accessible_resources": [
			"/*"
		],

		"permissions": [
			"tabs",
			"storage",
			"webRequest",
			"webRequestBlocking",
			"https://mail.google.com/*"
		],

		"background": {
			"scripts": ["/gmail_content/js/classes/V.js","background/background.js"]
		},

		"options_ui": {
			"page": "options/options.html",
			"chrome_style": false
		},

		"content_security_policy": "script-src 'self' https://*.google.com; object-src 'self'",

		"homepage_url": "http://peppermint.com"

	}