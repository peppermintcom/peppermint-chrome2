
	{

		"manifest_version": 2,

		"name": "Peppermint",
		"short_name" : "Peppermint",
		"description": "Peppermint allows users to send and reply to gmail messages using voice. It also includes automatic transcription.",
		"version": "1.2.0",

        "browser_action": {
          "default_icon": "/img/mic.png",
          "default_title": "Peppermint",
          "default_popup": "popup/popup.html"
        },

		"icons": {
			"128": "/img/logo.png"
		},

		"content_scripts": [
			{
				"matches": ["https://mail.google.com/*"],
				"js": [
					"/gmail_content/js/lib/jquery.min.js",
					"/gmail_content/inceptor/inceptor.js"
				],
				"css": [
					"/gmail_content/css/style.css"
				]
			}
		],

		"web_accessible_resources": [
			"/*"
		],

		"permissions": [

			"tabs",
			"storage",
			"geolocation",
			
			"clipboardWrite",
			"clipboardRead",

			"https://mail.google.com/*"
		],

		"background": {
			"page": "/background/background.html",
			"persistent": true
		},

		"options_ui": {
			"page": "options/options.html",
			"chrome_style": false
		},


		"content_security_policy": "script-src 'self' 'unsafe-eval' https://*.google.com; object-src 'self'",

		"homepage_url": "http://peppermint.com"

	}
