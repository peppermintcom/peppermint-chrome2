
	{

		"manifest_version": 2,

		"name": "Peppermint",
		"description": "Peppermint",
		"version": "1.1",

		"icons": {
			"128": "img/logo_60x60@2x.png"
		},

		"content_scripts": [
			{
				"matches": ["https://mail.google.com/*"],
				"js": [
					"/gmail_content/js/lib/jquery.min.js",
					"/gmail_content/inceptor/inceptor.js"
				],
				"css": [
					"/gmail_content/css/style.css"
				]
			},
			{
				"matches": ["http://localhost/prj/chrome_extensions/UPWORK/peppermint.com/desighner/desighner_2.html"],
				"js": [
					"/gmail_content/js/lib/jquery.min.js",
					"/gmail_content/inceptor/inceptor.js"
				],
				"css": [
					"/gmail_content/css/style.css"
				]
			},
			{
				"matches": ["http://chrome-extension-developer.com/peppermint_test/desighner_2.html"],
				"js": [
					"/gmail_content/js/lib/jquery.min.js",
					"/gmail_content/inceptor/inceptor.js"
				],
				"css": [
					"/gmail_content/css/style.css"
				]
			}
		],

		"web_accessible_resources": [
			"/*"
		],

		"permissions": [
			"tabs",
			"storage",
			"https://mail.google.com/*",
			"https://chrome-extension-developer.com/*"
		],

		"background": {
			"scripts": ["background/background.js"]
		},

		"options_ui": {
			"page": "options/options.html",
			"chrome_style": false
		},

		"content_security_policy": "script-src 'self' https://*.google.com; object-src 'self'",

		"homepage_url": "http://peppermint.com"

	}