
	{

		"manifest_version": 2,

		"name": "Peppermint",
		"description": "Peppermint",
		"version": "1.1",


        "browser_action": {
          "default_icon": {
            "19": "img/btn_03.png"
          },
          "default_title": "Peppermint",
          "default_popup": "record_popup/popup.html"
        },

		"icons": {
			"128": "img/logo_60x60@2x.png"
		},

		"content_scripts": [
			{
				"matches": ["https://mail.google.com/*"],
				"js": [
					"/js/V.js",
					"/content_scripts/Inceptor.js"
				],
				"css": [
					"/content_styles/style.css"
				]
			}
		],

		"web_accessible_resources": [
			"/content_scripts/*",
			"/img/*",
			"/js/*"
		],

		"permissions": [
			"tabs",
			"storage",
			"webRequest",
			"webRequestBlocking",
			"https://mail.google.com/*"
		],

		"background": {
			"scripts": ["js/V.js","background/background.js"]
		},

		"options_ui": {
			"page": "options/options.html",
			"chrome_style": false
		},

		"content_security_policy": "script-src 'self' 'unsafe-eval' https://*.google.com; object-src 'self'",

		"homepage_url": "http://peppermint.com"

	}