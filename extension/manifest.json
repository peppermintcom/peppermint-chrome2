
	{

		"manifest_version": 2,

		"name": "Peppermint",
		"short_name" : "Peppermint",
		"description": "Peppermint allows users to send and reply to gmail messages using voice. It also includes automatic transcription.",
		"version": "1.2.5",

		"browser_action": {
		  "default_icon": "/img/mic.png",
		  "default_title": "Peppermint",
		  "default_popup": "/pages/popup/popup.html"
		},

		"icons": {
			"128": "/img/logo.png"
		},

		"background": {

			"scripts": [

				"/js/misc/shims.js",

				"/js/lib/jQuery/jquery-2.1.4.min.js",				
				"/js/lib/WebAudioRecorder/WebAudioRecorder.js",
				"/js/lib/raven.min.js",
				"/js/lib/keen-tracker.min.js",
				"/js/lib/ohsnap.min.js",
				
				"/js/classes/Utilities.js",
				"/js/classes/EventHub.js",
				"/js/classes/AnalyticsManager.js",
				"/js/classes/ErrorReporter.js",
				"/js/classes/AnalyticsManager.js",

				"/js/classes/WebAudioRecorderWrap.js",
				"/js/classes/TranscriptionManager.js",
				"/js/classes/GlobalRecorder.js",

				"/js/classes/Uploader.js",
				"/js/classes/UploadQueue.js",
				"/js/classes/GlobalUploader.js",

				"/js/classes/BackgroundHelper.js",
				
				"/js/controllers/PopupController.js",

				"/js/launchers/background.js"

			],

			"persistent": true

		},

		"content_scripts": [
			{
				"matches": ["https://mail.google.com/*"],
				"js": [

					"/js/lib/jQuery/jquery-2.1.4.min.js",
					"/js/lib/raven.min.js",
					"/js/lib/keen-tracker.min.js",					
					"/js/lib/ohsnap.min.js",
					
					"/js/classes/EventHub.js",
					"/js/classes/Utilities.js",
					"/js/classes/LetterManager.js",
					"/js/classes/ErrorReporter.js",
					"/js/classes/LauncherHelper.js",
					"/js/classes/ButtonInserter.js",
					"/js/classes/AnalyticsManager.js",

					"/js/elements/Timer.js",
					"/js/elements/Popup.js",
					"/js/elements/Player.js",
					"/js/elements/Tooltip.js",
					"/js/elements/MiniPopup.js",
					"/js/elements/AudioVisualizer.js",

					"/js/controllers/GmailController.js",

					"/js/launchers/gmail_content.js"
				
				],
				"css": [
					"/css/content.css",
					"/css/audio_visualizer.css"
				],
				"run_at": "document_end"
			},
			{
				"matches": [

					"https://*/*",
					"http://*/*"
				],
				"js": [

					"/js/lib/jQuery/jquery-2.1.4.min.js",
					
					"/js/lib/raven.min.js",
					
					"/js/lib/keen-tracker.min.js",
					
					"/js/classes/EventHub.js",
					"/js/classes/LauncherHelper.js",

					"/js/elements/Tooltip.js",

					"/js/launchers/tooltip_content.js"

				]
			},
			{
				"matches": [ 

					"https://*/*",
					"http://*/*"

				],
				"js": [

					"/js/lib/jQuery/jquery-2.1.4.min.js",

					"/js/classes/BackendManager.js",
					"/js/classes/LauncherHelper.js",
					"/js/classes/PepLinkAddonFactory.js",
					
					"/js/controllers/AllLinksController.js",

					"/js/elements/PepLinkAddon.js",

					"/js/launchers/all_links_content.js"

				],
				"css": [
					"/css/all_links_styles.css"
				]
			}
		],

		"web_accessible_resources": [
			"/*"
		],
		
		"options_ui": {
			"page": "/pages/options/options.html",
			"chrome_style": true
		},

		"permissions": [

			"tabs",
			"storage",
			"geolocation",
			"identity",
			"alarms",
			"identity.email",
			
			"clipboardWrite",
			"clipboardRead",

			"https://mail.google.com/*",

			"https://*/*",
			"http://*/*"

		],

		"content_security_policy": "script-src 'self' 'unsafe-eval' https://*.google.com https://api.keen.io; object-src 'self'",

		"homepage_url": "http://peppermint.com"

	}
